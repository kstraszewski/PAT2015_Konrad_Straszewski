<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.konrad.konradstraszewski.MainActivity2">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:android.support.v7.cardview="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:id="@+id/card"
        android.support.v7.cardview:cardBackgroundColor="@color/accent_material_light"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="216dp"
        card_view:cardCornerRadius="0dp"
        android.support.v7.cardview:cardElevation="8dp">

    </android.support.v7.widget.CardView>

    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do the Magic!"
        android:id="@+id/button"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="50dp"
        android:onClick="doTheMagic"
        />


</RelativeLayout>


